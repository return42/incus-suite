# https://editorconfig.org/

root = true

[*]
tab_width = 8
max_line_length = 80
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8
insert_final_newline = ignore

[{Makefile,makefile.*,*.mk}]
tab_width = 8
indent_style = tab
indent_size = 8

[*.py]
indent_style = space
indent_size = 4

[{*.sh,*.env,prj,lxc-suite}]
indent_style = space
indent_size = 4

shell_variant  = bash
switch_case_indent = true

[*.rst]
indent_style = space
indent_size = 2
max_line_length = 79

[*.toml]
indent_style = space
indent_size = 2
